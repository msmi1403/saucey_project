{
  "functions": [
    {
      "source": "saucey-cloud-functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "echo \"Skipping default linting during deploy\""
      ]
    }
  ],
  "firestore": {
    "rules": "firestore.rules.local",
    "indexes": "firestore.indexes.json"
  },
  "emulators": {
    "functions": {
      "host": "127.0.0.1",
      "port": 5002
    },
    "firestore": {
      "host": "127.0.0.1",
      "port": 8080
    },
    "ui": {
      "enabled": true,
      "port": 4000
    }
  }
}
